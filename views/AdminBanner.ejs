  <div class="container mt-5">
    <h2 class="mb-3">Banner-ADS</h2>

    <form method="POST" action="/admin/banner-ads">
  <input type="text" name="imageUrl" placeholder="Banner Image URL" required>
  <input type="text" name="targetUrl" placeholder="Target URL" required>
  <button type="submit">Add Banner</button>
</form>

    <table class="table table-bordered table-striped">
      <thead class="table-dark">
      </thead>
    <tbody>
                <tr>
                    <th>Banner</th>
                    <th>Link</th>
                    <th>Clicks</th>
                    <th>Action</th>
                </tr>
                <% ads.forEach(ad=> { %>
                    <tr>
                        <td><img src="<%= ad.imageUrl %>" width="150"></td>
                        <td><a href="<%= ad.targetUrl %>" target="_blank">
                                <%= ad.targetUrl %>
                            </a></td>
                        <td>
                            <%= ad.clicks %>
                        </td>
                        <td>
                            <form method="POST" action="/admin/banner-ads/delete/<%= ad._id %>">
                                <button type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                    <% }) %>
    </tbody>
    </table>

  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>