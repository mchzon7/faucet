<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Referral Page - YourPlatform</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    body {
      background-color: #ECF0F1;
    }
    .navbar {
      background-color: #2C3E50;
    }
    .navbar .nav-link, .navbar-brand {
      color: #ECF0F1 !important;
    }
    .referral-box {
      background-color: #fff;
      border: 1px solid #BDC3C7;
      border-radius: 12px;
      padding: 20px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }
    .btn-primary {
      background-color: #3498DB;
      border: none;
    }
    .btn-primary:hover {
      background-color: #2980B9;
    }
    .table th {
      background-color: #BDC3C7;
    }
  </style>
</head>
<body>

<nav class="navbar navbar-expand-lg">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">CRASHCASH</a>
      <button class="navbar-toggler text-white" type="button" data-bs-toggle="collapse"
              data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon bg-white"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link" href="/dashboard">Dashboard</a></li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="faucetDropdown" role="button" data-bs-toggle="dropdown">
              Faucet List
            </a>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="/math">Solve-task</a></li>
              <li><a class="dropdown-item" href="/typing-captcha">Type-task</a></li>
              <li><a class="dropdown-item" href="/ptc3">V-ShortLinks</a></li>
              <li><a class="dropdown-item" href="/page1">V-pages</a></li>
            </ul>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="faucetDropdown" role="button" data-bs-toggle="dropdown">
              Offerwalls
            </a>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="/task">OOFD</a></li>
              <li><a class="dropdown-item" href="/complete-task">Daily-Task</a></li>
            </ul>
          </li>
          <li class="nav-item"><a class="nav-link" href="/referral">Referrals</a></li>
          <li class="nav-item"><a class="nav-link" href="/withdrawal">Withdraw</a></li>
          <li class="nav-item"><a class="nav-link" href="/profile">Profile</a></li>
          <li class="nav-item"><a class="nav-link" href="/contact">Contact</a></li>
          <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
        </ul>
      </div>
    </div>
</nav>

<div class="container py-5">
  <h3 class="text-center mb-4">Referral Overview</h3>
  <div class="row mb-4">
    <div class="col-md-6">
      <div class="referral-box text-center">
        <h5>Total Referrals</h5>
        <h3 class="text-primary" id="totalReferrals"><%= user.referralCount %></h3>
      </div>
    </div>
    <div class="col-md-6">
      <div class="referral-box text-center">
        <h5>Total Referral Earnings</h5>
        <h3 class="text-success" id="totalEarnings"><%= user.totalRefEarned.toFixed(4) %></h3>
      </div>
    </div>
  </div>

  <!-- Referral Link -->
  <div class="row">
    <div class="col-md-12">
        <div class="card p-3">
            <h5>Your Referral Link</h5>
            <div class="input-group">
                <input type="text" id="referralLink" class="form-control" value="<%= `https://faucet-crashcash.onrender.com/register?ref=${user.name}`%>" readonly>
                <button class="btn btn-primary copy-btn" onclick="copyReferralLink()">Copy</button>
            </div>
        </div>
    </div>
</div>

  <div class="referral-box">
    <!-- Recent Referrals -->
    <div class="row mt-4">
      <div class="col-md-12">
          <div class="card p-3">
              <h5>Recent Referrals</h5>
              <table class="table table-striped">
                  <thead>
                    <tr>
                      <th>#</th>
                      <th>Name</th>
                      <th>Date</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% recentReferrals.forEach((ref, index) => { %>
                      <tr>
                        <td><%= index + 1 %></td>
                        <td><%= ref.name %></td>
                        <td><%= new Date(ref.createdAt).toLocaleDateString() %></td>
                      </tr>
                    <% }); %>
                  </tbody>
              </table>
          </div>
      </div>
  </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>