    <div class="container d-flex justify-content-center align-items-center">
    <div class="form-container">
      <h3 class="text-center text-primary">OOFD-SUBMIT</h3>
      
      <form action="/mail/all" method="POST">
        <!-- Display flash messages -->
      <% if (success_msg) { %>
        <div style="color: green;">
          <%= success_msg %>
        </div>
        <% } %>
          <% if (error_msg) { %>
            <div style="color: red;">
              <%= error_msg %>
            </div>
            <% } %>
        <div class="mb-3">
          <label for="subject" class="form-label">subject</label>
          <input type="text" class="form-control" id="id" name="subject" placeholder="Enter the subject" required />
        </div>
        <div class="mb-3">
          <label for="message" class="form-label">Message</label>
          <input type="text" class="form-control" id="email" name="message" placeholder="Enter the message" required />
        </div>
        <button type="submit" class="btn btn-primary w-100">Submit</button>
      </form>

      <form action="/mail/single" method="POST">
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input type="email" class="form-control" id="id" name="email" placeholder="Enter the email" required />
        </div>
        <div class="mb-3">
          <label for="subject" class="form-label">subject</label>
          <input type="text" class="form-control" id="id" name="subject" placeholder="Enter the subject" required />
        </div>
        <div class="mb-3">
          <label for="message" class="form-label">Message</label>
          <input type="text" class="form-control" id="email" name="message" placeholder="Enter the message" required />
        </div>
        <button type="submit" class="btn btn-primary w-100">Submit</button>
      </form>
