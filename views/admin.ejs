<!-- Login Page -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin-Page</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #ECF0F1;
      font-family: 'Segoe UI', sans-serif;
    }
    .navbar {
      background-color: #2C3E50;
    }
    .navbar .nav-link, .navbar-brand {
      color: #ECF0F1 !important;
    }
    .btn-primary {
      background-color: #3498DB;
      border: none;
    }
    .btn-primary:hover {
      background-color: #2C3E50;
    }
    .form-container {
      max-width: 400px;
      background-color: white;
      border-radius: 12px;
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
      padding: 30px;
      margin-top: 80px;
    }
  </style>
</head>
<body>

<nav class="navbar navbar-expand-lg">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">CRASHCASH-Admin</a>
    <button class="navbar-toggler text-white" type="button" data-bs-toggle="collapse"
            data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon bg-white"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ms-auto">
        <li class="nav-item"><a class="nav-link" href="/admin/dashboard">Dashboard</a></li>
        <li class="nav-item"><a class="nav-link" href="/all-users">ManageUsers</a></li>
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="faucetDropdown" role="button" data-bs-toggle="dropdown">
              ADD-OPTIONS
            </a>
            <ul class="dropdown-menu">
            <li ><a class="dropdown-item" href="/addlinks">Add-Task</a></li>
              <li><a class="dropdown-item" href="/admin/banner-ads">Banner-ADS</a></li>
              <li><a class="dropdown-item" href="/rewards">Reward-controls</a></li>
            </ul>
          </li>
        <li class="nav-item"><a class="nav-link" href="/getlinks">Link-Task</a></li>
        <li class="nav-item"><a class="nav-link" href="/admin/ip-logs">IP-logs</a></li>
        <li class="nav-item"><a class="nav-link" href="/submitted-data">OOFD-SUBMIT</a></li>
        <li class="nav-item"><a class="nav-link" href="/sendmailusers">SendMessage</a></li>
        <li class="nav-item"><a class="nav-link" href="/recent-transactions">RecentTrx</a></li>
        <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
      </ul>
    </div>
  </div>
</nav>

  <div class="container d-flex justify-content-center align-items-center">
    <div class="form-container">
      <h3 class="text-center text-primary">ADD-Link</h3>
      <!-- Display flash messages -->
      <% if (success_msg) { %>
        <div style="color: green;">
          <%= success_msg %>
        </div>
        <% } %>
          <% if (error_msg) { %>
            <div style="color: red;">
              <%= error_msg %>
            </div>
            <% } %>
      <form action="/ptc/add-link" method="POST">
        <div class="mb-3">
          <label for="name" class="form-label">Link-Name</label>
          <input type="text" class="form-control" name="name" placeholder="Enter the Link-Name" required />
        </div>
        <div class="mb-3">
          <label for="url" class="form-label">Link-url</label>
          <input type="email" class="form-control" name="url" placeholder="Enter the Link-url" required />
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <input type="text" class="form-control" name="description" placeholder="Enter the description" required />
        </div>
        <div class="mb-3">
          <label for="reward" class="form-label">Reward-Amount</label>
          <input type="text" class="form-control" name="reward" placeholder="Reward-Amount" required />
        </div>
        <button type="submit" class="btn btn-primary w-100">Add-Link</button>
      </form>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>